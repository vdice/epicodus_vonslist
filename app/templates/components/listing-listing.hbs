{{yield}}
<ul>
  <h3>Listings</h3>
  {{#each sortedListings as |listing|}}
    <li>
      <h4>
        {{#link-to 'listing' listing.id}}
          <h5>
            {{listing.title}}
            <small>{{format-date listing.date}}</small>
          </h5>
        {{/link-to}}
      </h4>
    </li>
  {{/each}}
</ul>
