{{yield}}
{{#if showNewListing}}<hr>
  <div class="container">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" class="form-control" placeholder="e.g. dog"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control" placeholder="e.g. Jake"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{textarea row="4" cols="50" value=description id="description" class="form-control" placeholder="Add description here..."}}
      </div>
    </form>
    <button class="btn btn-success"{{action 'saveListing'}}><i class="fa fa-save"></i></button>
    <button class="btn btn-danger" {{action 'newListingHide'}}><i class="fa fa-close"></i></button>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'newListingShow'}}><i class="fa fa-plus"></i></button>
{{/if}}
